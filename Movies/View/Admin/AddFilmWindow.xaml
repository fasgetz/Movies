        <ComboBox HorizontalAlignment="Left" Height="19" Margin="168,157,0,0" VerticalAlignment="Top" Width="110"/>
        <Image HorizontalAlignment="Left" Height="130" Margin="2,144,0,0" VerticalAlignment="Top" Width="132" Grid.Column="1"/>
        <ComboBox HorizontalAlignment="Left" Height="19" Margin="168,130,0,0" VerticalAlignment="Top" Width="110"/>-->
    </Grid>
</Window>
