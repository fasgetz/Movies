<Window x:Class="Movies.View.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movies.View.Admin"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" Background="#FFF3F3F3" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top" Background="#FFF3F3F3">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="33*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Films" HorizontalContentAlignment="Center" Height="30" Click="Films_click" Grid.Column="0" />
            <MenuItem Header="Users" Height="30" Click="Users_click" Grid.Column="1"/>
            <MenuItem Header="Actors" Height="30" Click="Actors_Click" Grid.Column="2"/>
        </Menu>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" HorizontalAlignment="Left" Height="377" Margin="2,35,0,0" VerticalAlignment="Top" Width="781" Background="#FFF3F3F3"/>

    </Grid>
</Window>
